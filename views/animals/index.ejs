<% include ../partials/header %> 

 <div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>Welcome To The Animal App!</h1>
             <p>View our hand-picked animals from all over the world</p>
             <p>
                <a class="btn btn-primary btn-large" href="/animals/new">Add New Animal</a>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% animals.forEach(function(animal){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= animal.image %>">
                   <div class="caption">
                       <h4><%= animal.name %></h4>
                   </div>
                   <p>
                       <a href="/animals/<%= animal._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>
